source "https://rubygems.org"

# Use the GitHub Pages gem to get the correct Jekyll version & approved plugins

gem "github-pages", group: :jekyll_plugins

# Cache included files to speed up rebuilds (recommended by Minimal Mistakes)

gem "jekyll-include-cache", group: :jekyll_plugins

# Allow use of remote_theme in _config.yml

gem "jekyll-remote-theme", group: :jekyll_plugins